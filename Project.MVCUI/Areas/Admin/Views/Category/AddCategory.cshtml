@model CategoryVM

@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kategori Ekle</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        <label class="col-sm-2">Kategori Isim</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Category.CategoryName, new { @class = "form-control genislik" })
        </div>
    </div>

    <br /> <br />


    <div class="form-group">
        <label class="col-sm-2">Açıklama</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Category.Description, new { @class = "form-control genislik" })
        </div>
    </div>

    <br /> <br />

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Ekle" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Kategori Listesi", "CategoryList")
</div>
