@model CategoryVM

@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kategoriler</h2>

<p>
    @Html.ActionLink("Kategori Ekleme", "AddCategory")
</p>
<table class="table">
    <tr>
        <th>ID</th>
        <th>Adı</th>
        <th>Açıklaması</th>
        <th>Operasyon</th>
    </tr>

@foreach (var item in Model.Categories) {
    <tr>
        <td>
            @item.ID
        </td>

        <td>
            @item.CategoryName
        </td>
        <td>@item.Description</td>
        <td>
            @Html.ActionLink("Güncelle", "UpdateCategory", new { id = item.ID }) |
            @Html.ActionLink("Detay", "CategoryDetails", new { id = item.ID }) |
            @Html.ActionLink("Sil", "DeleteCategory", new { id = item.ID })
        </td>
    </tr>
}

</table>
