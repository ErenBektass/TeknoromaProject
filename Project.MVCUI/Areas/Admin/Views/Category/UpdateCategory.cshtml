@model CategoryVM

@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kategori Bilgisi Güncelle</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(x=>x.Category.ID)
    <div class="row">
        <div class="col-sm-12">
            <section class="panel">
                <header class="panel-heading">
                
                </header>

                <div class="panel-body">

                    <div class="form-group">
                        <label class="col-sm-2">Kategori Isim</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Category.CategoryName, new { @class = "form-control genislik" })
                        </div>
                    </div>

                    <br /> <br />


                    <div class="form-group">
                        <label class="col-sm-2">Açıklama</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Category.Description, new { @class = "form-control genislik" })
                        </div>
                    </div>

                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2">İşlem : </label>
                        <div class="col-sm-10">
                            <button class="btn btn-primary">Güncelle</button>
                        </div>
                    </div>








                </div>


            </section>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Kategori Listesi", "CategoryList")
</div>
