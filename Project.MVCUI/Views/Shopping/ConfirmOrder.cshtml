@model OrderVM

@{
    ViewBag.Title = "ConfirmOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="width: inherit;">
    @using (Html.BeginForm())
    {
        <div class="form-group">
            <label class="col-sm-2 control-label"> Gönderim Adresi </label>

            <div class="col-sm-10">
                @Html.TextAreaFor(x => x.Order.ShipAddress, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label"> Kart Numarası </label>

            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.PaymentDTO.CardNumber, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label"> Kart Güvenlik Numarası </label>

            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.PaymentDTO.SecurityNumber, new { @class = "form-control" })
            </div>
        </div>


        <div class="form-group">
            <label class="col-sm-2 control-label">Gecerlilik Süresi (Yıl) </label>

            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.PaymentDTO.CardExpiryYear, new { @class = "form-control" })
            </div>
        </div>


        <div class="form-group">
            <label class="col-sm-2 control-label">Gecerlilik Süresi (Ay) </label>

            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.PaymentDTO.CardExpiryMonth, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Kart üzerindeki isim </label>

            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.PaymentDTO.CardUserName, new { @class = "form-control" })
            </div>
        </div>


        <div class="form-group">
            <label class="col-sm-2 control-label">Email </label>

            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Order.Email, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Ülke </label>

            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Order.ShipCountry, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Şehir </label>

            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Order.ShipCity, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">

            <div class="col-sm-10">
                <button class="btn btn-primary"> Onayla</button>
            </div>
        </div>
    }


</div>

