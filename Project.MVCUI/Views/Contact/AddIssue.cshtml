@model IssueVM

@{
    ViewBag.Title = "AddIssue";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Şikayet Ekle</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        <label class="col-sm-2">Konu</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Issue.Subject, new { @class = "form-control genislik",@required = "required" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2">Açıklama</label>
        <div class="col-sm-10">
            @Html.TextAreaFor(x => x.Issue.Description, new { @class = "form-control genislik", @required = "required" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2">Email Adress</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Issue.Email, new { @class = "form-control genislik", @required = "required" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Ekle" class="btn btn-default" />
        </div>
    </div>

</div>
}

<div>
    @Html.ActionLink("IssueList", "IssueList")
</div>
