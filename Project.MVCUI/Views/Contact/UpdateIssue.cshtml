@model IssueVM

@{
    ViewBag.Title = "UpdateIssue";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sorunu Güncelle</h2>

@using (Html.BeginForm("UpdateIssue", "Issue", FormMethod.Post, new { enctype = "multipart / form - data" }))
{
    @Html.HiddenFor(x => x.Issue.ID)
    <div class="row">
        <div class="col-sm-12">
            <section class="panel">
                <header class="panel-heading">
                </header>

                <div class="panel-body">


                    <div class="form-group">
                        <label class="col-sm-2">Konu</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Issue.Subject, new { @class = "form-control genislik", disabled = "disabled" })
                        </div>
                    </div>

                    <br /> <br />


                    

                           <div class="form-group">
                               <label class="col-sm-2">Email</label>
                               <div class="col-sm-10">
                                   @Html.TextBoxFor(x => x.Issue.Email, new { @class = "form-control genislik", disabled = "disabled" })

                               </div>

                               <br /> <br />

                           </div>

                    <div class="form-group">
                        <label class="col-sm-2">Açıklama</label>
                        <div class="col-sm-10">
                            @Html.TextAreaFor(x => x.Issue.Description, new { @class = "form-control genislik", disabled = "disabled" })
                        </div>
                    </div>

                    <br /> <br /> <br /> <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2">Cevap</label>
                        <div class="col-sm-10">
                            @Html.TextAreaFor(x => x.Issue.Answer, new { @class = "form-control genislik" })
                        </div>
                    </div>

                    <br /> <br /> <br /> <br />


                    <div class="form-group">
                        <label class="col-sm-2">Durum</label>
                        <div class="col-sm-10">
                            @Html.DropDownListFor(x => x.Issue.IssueStatus,
     new SelectList(Enum.GetValues(typeof(Project.ENTITIES.Enums.IssueStatus))))
                        </div>
                    </div>

                    <br /> <br />

                    <div class="form-group">
                        <label class="col-sm-2">İşlem : </label>
                        <div class="col-sm-10">
                            <button class="btn btn-primary">Güncelle</button>
                        </div>
                    </div>








                </div>


            </section>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Sorun Listesi", "IssueList")
</div>
